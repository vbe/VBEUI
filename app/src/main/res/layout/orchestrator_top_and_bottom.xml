<?xml version="1.0" encoding="utf-8"?>
<fr.vbe.android.ui.coordinator.OrchestratorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:Orchestrator_content="@+id/scroll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="TOP BAR"
        android:gravity="center"
        android:background="#a00"
        android:textSize="18sp"
        app:whenContentScrollsDown="hide"
        app:whenContentScrollsUp="show"/>

    <ScrollView
        android:id="@id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="BOTTOM BAR"
        android:gravity="center"
        android:background="#a00"
        android:textSize="18sp"
        app:whenContentScrollsDown="hide"
        app:whenContentScrollsUp="show"/>

</fr.vbe.android.ui.coordinator.OrchestratorLayout>